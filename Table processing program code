825. {
826. if (Rows == true)
827. {
828. data = data + Sheet.Columns[i].ColumnName + " ";
829. }
830. else
831. {
832. data = data + Sheet.Columns[i].ColumnName + " " + Datatypes[i];
833. }
834. }
835. else
836. {
837. if (Rows == true)
838. {
839. data = data + Sheet.Columns[i].ColumnName + "," + " ";
840. }
841. else
842. {
843. data = data + Sheet.Columns[i].ColumnName + " " + Datatypes[i] + ", ";
844. }
845. }
846. }
847. return data;
